<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZhiLan"
        tools:targetApi="31">
        <activity
            android:name="com.example.zhilan.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ZhiLan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.zhilan.ScheduleActivity"
            android:exported="false"
            android:theme="@style/Theme.ZhiLan" />
        <activity
            android:name="com.example.zhilan.ScheduleEditActivity"
            android:theme="@style/Theme.ZhiLan" />
        <activity
            android:name="com.example.zhilan.SettingsActivity"
            android:theme="@style/Theme.ZhiLan" />
    </application>

</manifest>